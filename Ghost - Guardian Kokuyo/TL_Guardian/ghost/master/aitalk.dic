	else
	{
		
			_draw = ANY(aitalkdraw)
			aitalkdraw[LSO] = IARRAY
			
			if _draw == "rare"
			{
				_tidbitx = ARRAYSIZE(tidbits)
				
				if r_on == 1 && _tidbitx > 3; { LastTalk = RareDialogue }
				else; LastTalk = NormalDialogue
			}
			
			elseif _draw == "location"
				{	
					if locslot == "home"; LastTalk = HomeDialogue
					elseif locslot == "shrine"; LastTalk = ShrineDialogue
					
					elseif locslot == "goingshrine" || locslot == "goinghome" 
					{ 
						if RAND(4) == 0; LastTalk = TravelDialogue 
						else; LastTalk = NormalDialogue
					}
				}
				
			else; LastTalk = NormalDialogue
	}
	
	LastTalk
	
	talkcount++
	if RAND(4) == 0 { if trust <= 250; trust++ }
}

RandomizePool
{
    aitalkdraw = IARRAY
	
    _drawnum = 1
	
    _locmax = 3
		if locslot != "home" { _locmax = 4 }
		
	_raremax = 9
		if mr_on == 1 { _raremax = 6 }
	
    for _l = 0; _l < _locmax; _l++
    {	
		for _r = 0; _r < _raremax; _r++  // please don;'t ask me how long it took for me to figure this bullshit out. also dont ask me if it actually works because i dont actually know. i Think it does but honestly we cant be sure due to me ragequitting the testing process when it seemed good enough (update: yes it works pretty much the way i needed it to)
		{
			if _r < _drawnum; aitalkdraw ,= "rare"
			
			elseif _l < _drawnum; aitalkdraw ,= "location"
			
			else; aitalkdraw ,= "normal"	
		}
	}
}

